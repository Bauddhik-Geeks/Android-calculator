<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2C2C26"
        android:orientation="vertical">

        <EditText
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="calculator"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"></EditText>

        <TextView
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="#999999"
            android:textAlignment="textEnd"
            android:textColor="#DD1609"
            android:id="@+id/screen"
            android:textSize="50dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#FFC107"
                android:text="AC"
                android:textColor="#fff"
                android:id="@+id/btn1"
                android:textSize="30dp"></Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:id="@+id/btn2"
                android:textColor="#fff"
                android:background="#FFC107"></Button>


            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="%"
                android:textSize="30dp"
                android:id="@+id/btn3"
                android:textColor="#fff"
                android:background="#FFC107"></Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="/"
                android:id="@+id/btn4"
                android:textSize="30dp"
                android:textColor="#fff"
                android:background="#FFC107"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="7"
                android:id="@+id/btn5"
                android:textColor="#f00"></Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="8"
                android:id="@+id/btn6"
                android:textColor="#f00"
                android:textSize="30dp"></Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="9"
                android:id="@+id/btn7"
                android:textColor="#f00"
                android:textSize="30dp"></Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="X"
                android:id="@+id/btn8"
                android:textSize="30dp"
                android:textColor="#fff"
                android:background="#FFC107"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:id="@+id/btn9"
                android:text="4"
                android:textColor="#f00"></Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="5"
                android:id="@+id/btn10"
                android:textColor="#f00"></Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="6"
                android:id="@+id/btn11"
                android:textColor="#f00"
                android:textSize="30dp"></Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="+"
                android:id="@+id/btn12"
                android:textSize="30dp"
                android:textColor="#fff"
                android:background="#FFC107"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="1"
                android:id="@+id/btn13"
                android:textColor="#f00"></Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="2"
                android:id="@+id/btn14"
                android:textColor="#f00"></Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="3"
                android:id="@+id/btn15"
                android:textColor="#f00"
                android:textSize="30dp"></Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="-"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#fff"
                android:id="@+id/btn16"
                android:background="#FFC107"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:textSize="30dp"
                android:text="0"
                android:id="@+id/btn17"
                android:textColor="#f00"></Button>


            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="."
                android:id="@+id/btn18"
                android:textColor="#f00"></Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="30dp"
                android:textColor="#fff"
                android:id="@+id/btn19"
                android:background="#FFC107"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>